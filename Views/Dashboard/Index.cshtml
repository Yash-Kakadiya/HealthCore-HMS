@functions {
    private string GetDepartmentIcon(string departmentName)
    {
        var name = departmentName?.ToLower() ?? "";
        if (name.Contains("cardio")) return "bx-heart";
        if (name.Contains("neuro")) return "bx-brain";
        if (name.Contains("ortho")) return "bx-bone";
        if (name.Contains("pediatric") || name.Contains("child")) return "bx-child";
        if (name.Contains("emergency")) return "bx-plus-medical";
        if (name.Contains("surgery") || name.Contains("surgical")) return "bx-injection";
        if (name.Contains("dental")) return "bx-tooth";
        if (name.Contains("eye") || name.Contains("ophthal")) return "bx-low-vision";
        if (name.Contains("radio")) return "bx-scan";
        if (name.Contains("icu")) return "bx-pulse";
        if (name.Contains("maternity")) return "bx-female";
        if (name.Contains("psychiatry")) return "bx-brain";
        if (name.Contains("dermatology")) return "bx-face";
        if (name.Contains("oncology")) return "bx-dna";
        return "bx-clinic";
    }
