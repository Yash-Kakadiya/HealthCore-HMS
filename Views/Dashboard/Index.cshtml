@model HMS.Models.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

@section HeadScripts {
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.45.0/dist/apexcharts.min.js"></script>
    <style>
        /* Dashboard Enhanced Styles */
        .dashboard-container {
            animation: fadeInUp 0.6s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Animated Gradient Background for Cards */
        .gradient-card {
            background: linear-gradient(135deg, var(--neon-primary) 0%, var(--neon-secondary) 100%);
            position: relative;
            overflow: hidden;
        }

            .gradient-card::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -50%;
                bottom: -50%;
                left: -50%;
                background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
                transform: rotate(45deg) translate(-50%, -50%);
                animation: shimmer 3s infinite;
            }

        @@keyframes shimmer {
            0%, 100% {
                transform: translateX(-100%) translateY(-100%) rotate(45deg);
            }

            50% {
                transform: translateX(100%) translateY(100%) rotate(45deg);
            }
        }

        /* Enhanced Metric Cards */
        .metric-card {
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            padding: 24px;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .metric-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 40px rgba(0,0,0,0.15);
                border-color: var(--neon-primary);
            }

            .metric-card::after {
                content: '';
                position: absolute;
                top: -2px;
                left: -2px;
                right: -2px;
                bottom: -2px;
                background: linear-gradient(45deg, var(--neon-primary), var(--neon-secondary), var(--neon-primary));
                border-radius: 20px;
                opacity: 0;
                z-index: -1;
                transition: opacity 0.3s ease;
            }

            .metric-card:hover::after {
                opacity: 0.3;
            }

        .metric-icon {
            width: 60px;
            height: 60px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            margin-bottom: 16px;
            position: relative;
        }

            .metric-icon i {
                z-index: 1;
            }

        .metric-value {
            font-size: 36px;
            font-weight: 700;
            color: var(--text-color-primary);
            margin-bottom: 8px;
            font-family: 'Roboto Mono', monospace;
        }

        .metric-label {
            font-size: 14px;
            color: var(--text-color-secondary);
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .metric-change {
            display: flex;
            align-items: center;
            gap: 4px;
            font-size: 13px;
            margin-top: 12px;
        }

            .metric-change.positive {
                color: #10b981;
            }

            .metric-change.negative {
                color: #ef4444;
            }

        /* Performance Ring */
        .performance-ring {
            position: relative;
            width: 120px;
            height: 120px;
            margin: 0 auto;
        }

        .performance-value {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 28px;
            font-weight: 700;
            color: var(--text-color-primary);
        }

        /* Activity Timeline */
        .activity-timeline {
            position: relative;
            padding-left: 30px;
        }

            .activity-timeline::before {
                content: '';
                position: absolute;
                left: 9px;
                top: 0;
                bottom: 0;
                width: 2px;
                background: linear-gradient(180deg, var(--neon-primary) 0%, transparent 100%);
            }

        .activity-item {
            position: relative;
            padding-bottom: 30px;
            animation: slideInLeft 0.5s ease-out backwards;
        }

            .activity-item:nth-child(1) {
                animation-delay: 0.1s;
            }

            .activity-item:nth-child(2) {
                animation-delay: 0.2s;
            }

            .activity-item:nth-child(3) {
                animation-delay: 0.3s;
            }

            .activity-item:nth-child(4) {
                animation-delay: 0.4s;
            }

            .activity-item:nth-child(5) {
                animation-delay: 0.5s;
            }

        @@keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .activity-dot {
            position: absolute;
            left: -21px;
            top: 5px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: var(--neon-primary);
            border: 2px solid var(--bg-color);
            box-shadow: 0 0 10px var(--neon-primary);
        }

        .activity-content {
            background: var(--glass-bg);
            padding: 12px 16px;
            border-radius: 12px;
            border: 1px solid var(--glass-border);
        }

        .activity-time {
            font-size: 12px;
            color: var(--text-color-secondary);
            margin-bottom: 4px;
        }

        .activity-text {
            font-size: 14px;
            color: var(--text-color-primary);
            margin-bottom: 4px;
        }

        .activity-badge {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 600;
            background: rgba(var(--neon-primary-rgb), 0.1);
            color: var(--neon-primary);
        }

        /* Department Cards */
        .department-card {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            border-radius: 16px;
            padding: 20px;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

            .department-card:hover {
                transform: translateY(-3px);
                border-color: var(--neon-primary);
            }

        .department-icon-wrapper {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 12px;
            font-size: 24px;
        }

        .department-stats {
            display: flex;
            gap: 16px;
            margin-top: 12px;
            padding-top: 12px;
            border-top: 1px solid var(--glass-border);
        }

        .department-stat {
            flex: 1;
        }

        .department-stat-value {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-color-primary);
        }

        .department-stat-label {
            font-size: 11px;
            color: var(--text-color-secondary);
            text-transform: uppercase;
        }

        /* Top Doctors List */
        .doctor-card {
            display: flex;
            align-items: center;
            gap: 16px;
            padding: 16px;
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            border-radius: 12px;
            margin-bottom: 12px;
            transition: all 0.3s ease;
        }

            .doctor-card:hover {
                transform: translateX(5px);
                border-color: var(--neon-primary);
            }

        .doctor-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--neon-primary), var(--neon-secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 18px;
            flex-shrink: 0;
        }

        .doctor-info {
            flex: 1;
        }

        .doctor-name {
            font-size: 15px;
            font-weight: 600;
            color: var(--text-color-primary);
            margin-bottom: 4px;
        }

        .doctor-specialty {
            font-size: 13px;
            color: var(--text-color-secondary);
        }

        .doctor-stats {
            text-align: right;
        }

        .doctor-appointments {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-color-primary);
        }

        .doctor-revenue {
            font-size: 13px;
            color: var(--neon-primary);
            font-weight: 500;
        }

        /* Chart Containers */
        .chart-container {
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            padding: 24px;
            height: 100%;
            transition: all 0.3s ease;
        }

        .chart-container:hover {
            border-color: var(--neon-primary);
            box-shadow: var(--neon-glow-primary);
        }

        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .chart-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-color-primary);
            margin-bottom: 4px;
        }

        .chart-subtitle {
            font-size: 0.875rem;
            color: var(--text-color-secondary);
        }

        .chart-actions {
            display: flex;
            gap: 8px;
        }

        .chart-action-btn {
            padding: 6px 12px;
            border-radius: 8px;
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            color: var(--text-color-secondary);
            font-size: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .chart-action-btn:hover,
            .chart-action-btn.active {
                background: var(--neon-primary);
                color: white;
                border-color: var(--neon-primary);
            }

        /* Quick Stats Grid */
        .quick-stat {
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            text-align: center;
            padding: 16px;
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            border-radius: 12px;
            transition: all 0.3s ease;
        }

            .quick-stat:hover {
                transform: scale(1.05);
                border-color: var(--neon-primary);
            }

        .quick-stat-icon {
            font-size: 32px;
            margin-bottom: 8px;
            color: var(--neon-primary);
        }

        .quick-stat-value {
            font-size: 24px;
            font-weight: 700;
            color: var(--text-color-primary);
            margin-bottom: 4px;
        }

        .quick-stat-label {
            font-size: 12px;
            color: var(--text-color-secondary);
            text-transform: uppercase;
        }

        /* Appointment Cards */
        .appointment-card {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 16px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .appointment-card::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                bottom: 0;
                width: 4px;
                background: var(--neon-primary);
            }

            .appointment-card:hover {
                transform: translateX(5px);
                box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            }

        .appointment-time-block {
            background: linear-gradient(135deg, var(--neon-primary), var(--neon-secondary));
            color: white;
            padding: 8px 12px;
            border-radius: 8px;
            text-align: center;
            min-width: 70px;
        }

            .appointment-time-block .time {
                font-size: 16px;
                font-weight: 700;
            }

            .appointment-time-block .period {
                font-size: 11px;
                opacity: 0.9;
            }

        .appointment-details {
            flex: 1;
        }

        .appointment-patient {
            font-size: 15px;
            font-weight: 600;
            color: var(--text-color-primary);
            margin-bottom: 4px;
        }

        .appointment-doctor {
            font-size: 13px;
            color: var(--text-color-secondary);
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .appointment-status {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

            .appointment-status.pending {
                background: rgba(251, 191, 36, 0.1);
                color: #f59e0b;
            }

            .appointment-status.confirmed {
                background: rgba(16, 185, 129, 0.1);
                color: #10b981;
            }

            .appointment-status.cancelled {
                background: rgba(239, 68, 68, 0.1);
                color: #ef4444;
            }

        /* Loading Animation */
        .skeleton {
            animation: skeleton-loading 1s linear infinite alternate;
        }

        @@keyframes skeleton-loading {
            0% {
                background-color: hsl(200, 20%, 80%);
            }

            100% {
                background-color: hsl(200, 20%, 95%);
            }
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .metric-value {
                font-size: 28px;
            }

            .metric-label {
                font-size: 12px;
            }

            .chart-container {
                background: var(--glass-bg);
                backdrop-filter: blur(10px);
                -webkit-backdrop-filter: blur(10px);
                border: 1px solid var(--glass-border);
                padding: 16px;
            }
        }

        /* Dark Theme Adjustments */
        [data-theme="dark"] .metric-card {
            background: rgba(13, 17, 23, 0.8);
        }

        [data-theme="dark"] .activity-content {
            background: rgba(13, 17, 23, 0.6);
        }

        [data-theme="dark"] .department-card {
            background: rgba(13, 17, 23, 0.6);
        }

        [data-theme="dark"] .doctor-card {
            background: rgba(13, 17, 23, 0.6);
        }

        [data-theme="dark"] .appointment-card {
            background: rgba(13, 17, 23, 0.6);
        }

        /* Pulse Animation */
        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        .pulse {
            animation: pulse 2s infinite;
        }

        /* Neon Glow Effect */
        .neon-glow {
            box-shadow: 0 0 20px var(--neon-primary);
        }

        /* Counter Animation */
        .counter {
            display: inline-block;
        }
    </style>
}

<div class="dashboard-container">
    <!-- Enhanced Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center glass-effect p-4">
                <div>
                    <h1 class="mb-2" style="font-size: 2.5rem; font-weight: 700; color: var(--text-color-primary); text-shadow: var(--neon-glow-primary);">
                        Welcome back, @Context.Session.GetString("UserName")! 👋
                    </h1>
                    <p style="color: var(--text-color-secondary); font-size: 1.1rem;">
                        Here's your hospital dashboard overview
                    </p>
                </div>
                <div class="text-end">
                    <div style="font-size: 1.25rem; font-weight: 600; color: var(--neon-primary);">
                        @DateTime.Now.ToString("dddd")
                    </div>
                    <div style="font-size: 2rem; font-weight: 700; color: var(--text-color-primary);">
                        @DateTime.Now.ToString("MMMM dd, yyyy")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Metrics Row -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="metric-card">
                <div class="metric-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <i class='bx bx-user-plus' style="color: white;"></i>
                </div>
                <div class="metric-value counter" data-target="@Model.TotalPatients">0</div>
                <div class="metric-label">Total Patients</div>
                <div class="metric-change positive">
                    <i class='bx bx-trending-up'></i>
                    <span>+@Model.NewPatientsThisMonth this month</span>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="metric-card">
                <div class="metric-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <i class='bx bx-calendar-check' style="color: white;"></i>
                </div>
                <div class="metric-value counter" data-target="@Model.TotalAppointmentsThisMonth">0</div>
                <div class="metric-label">Monthly Appointments</div>
                <div class="metric-change positive">
                    <i class='bx bx-trending-up'></i>
                    <span>@Model.CompletionRate.ToString("0.0")% completion</span>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="metric-card">
                <div class="metric-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                    <i class='bx bx-dollar-circle' style="color: white;"></i>
                </div>
                <div class="metric-value">₹<span class="counter" data-target="@((int)Model.TotalRevenueThisMonth)">0</span></div>
                <div class="metric-label">Monthly Revenue</div>
                <div class="metric-change positive">
                    <i class='bx bx-trending-up'></i>
                    <span>+@Model.RevenueGrowthPercentage.ToString("0.0")% growth</span>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="metric-card">
                <div class="metric-icon" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                    <i class='bi bi-person-gear' style="color: white;"></i>
                </div>
                <div class="metric-value counter" data-target="@Model.TotalDoctors">0</div>
                <div class="metric-label">Active Doctors</div>
                <div class="metric-change positive">
                    <i class='bx bx-check-circle'></i>
                    <span>@Model.OccupancyRate.ToString("0.0")% occupancy</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Row -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3 col-lg-2">
            <div class="quick-stat">
                <div class="quick-stat-icon">
                    <i class='bx bx-calendar-event'></i>
                </div>
                <div class="quick-stat-value counter" data-target="@Model.TodayAppointments">0</div>
                <div class="quick-stat-label">Today</div>
            </div>
        </div>
        <div class="col-6 col-md-3 col-lg-2">
            <div class="quick-stat">
                <div class="quick-stat-icon">
                    <i class='bx bx-time-five'></i>
                </div>
                <div class="quick-stat-value counter" data-target="@Model.PendingAppointmentsThisMonth">0</div>
                <div class="quick-stat-label">Pending</div>
            </div>
        </div>
        <div class="col-6 col-md-3 col-lg-2">
            <div class="quick-stat">
                <div class="quick-stat-icon">
                    <i class='bx bx-check-circle'></i>
                </div>
                <div class="quick-stat-value counter" data-target="@Model.CompletedAppointmentsThisMonth">0</div>
                <div class="quick-stat-label">Completed</div>
            </div>
        </div>
        <div class="col-6 col-md-3 col-lg-2">
            <div class="quick-stat">
                <div class="quick-stat-icon">
                    <i class='bx bx-x-circle'></i>
                </div>
                <div class="quick-stat-value counter" data-target="@Model.CancelledAppointmentsThisMonth">0</div>
                <div class="quick-stat-label">Cancelled</div>
            </div>
        </div>
        <div class="col-6 col-md-3 col-lg-2">
            <div class="quick-stat">
                <div class="quick-stat-icon">
                    <i class='bx bx-user-plus'></i>
                </div>
                <div class="quick-stat-value counter" data-target="@Model.NewPatientsThisWeek">0</div>
                <div class="quick-stat-label">New This Week</div>
            </div>
        </div>
        <div class="col-6 col-md-3 col-lg-2">
            <div class="quick-stat">
                <div class="quick-stat-icon">
                    <i class='bx bx-rupee'></i>
                </div>
                <div class="quick-stat-value">₹<span class="counter" data-target="@((int)Model.AverageConsultationFee)">0</span></div>
                <div class="quick-stat-label">Avg Fee</div>
            </div>
        </div>
    </div>

    <!-- Main Charts Row -->
    <div class="row g-4 mb-4">
        <!-- Appointment Trends Chart -->
        <div class="col-12 col-xl-8">
            <div class="chart-container">
                <div class="chart-header">
                    <div>
                        <div class="chart-title">Appointment Trends</div>
                        <div class="chart-subtitle">Daily appointment statistics for @DateTime.Now.ToString("MMMM yyyy")</div>
                    </div>
                    <div class="chart-actions">
                        <button class="chart-action-btn active" onclick="updateAppointmentChart('month')">Month</button>
                        <button class="chart-action-btn" onclick="updateAppointmentChart('week')">Week</button>
                        <button class="chart-action-btn" onclick="refreshAppointmentChart()">
                            <i class='bx bx-refresh'></i>
                        </button>
                    </div>
                </div>
                <div id="appointmentTrendsChart" style="height: 350px;"></div>
            </div>
        </div>

        <!-- Performance Metrics -->
        <div class="col-12 col-xl-4">
            <div class="chart-container">
                <div class="chart-header">
                    <div>
                        <div class="chart-title">Performance Metrics</div>
                        <div class="chart-subtitle">Key performance indicators</div>
                    </div>
                </div>
                <div class="row g-3">
                    <div class="col-6">
                        <div class="text-center">
                            <div id="completionRateChart" style="height: 140px;"></div>
                            <div class="mt-2">
                                <div style="font-size: 14px; font-weight: 600; color: var(--text-color-primary);">Completion Rate</div>
                                <div style="font-size: 12px; color: var(--text-color-secondary);">This Month</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-center">
                            <div id="occupancyRateChart" style="height: 140px;"></div>
                            <div class="mt-2">
                                <div style="font-size: 14px; font-weight: 600; color: var(--text-color-primary);">Occupancy Rate</div>
                                <div style="font-size: 12px; color: var(--text-color-secondary);">Current Status</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span style="font-size: 13px; color: var(--text-color-secondary);">Cancellation Rate</span>
                        <span style="font-size: 14px; font-weight: 600; color: #ef4444;">@Model.CancellationRate.ToString("0.0")%</span>
                    </div>
                    <div class="progress" style="height: 6px; border-radius: 3px;">
                        <div class="progress-bar" style="width: @Model.CancellationRate%; background: #ef4444;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Department Performance & Revenue Distribution -->
    <div class="row g-4 mb-4">
        <!-- Department Performance -->
        <div class="col-12 col-xl-7">
            <div class="chart-container">
