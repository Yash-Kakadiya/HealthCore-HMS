        function initializeHourlyHeatmap() {
            fetch('/Dashboard/GetHourlyDistribution')
                .then(response => response.json())
                .then(data => {
                    // Create heatmap data structure
                    const heatmapData = [];
                    const days = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];

                    // Generate sample data for weekly heatmap (in production, you'd get this from backend)
                    days.forEach((day, dayIndex) => {
                        const dayData = {
                            name: day,
                            data: []
                        };

                        for (let hour = 8; hour <= 20; hour++) {
                            const hourData = data.appointments[data.hours.indexOf(hour)] || 0;
                            // Simulate variation for different days
                            const variation = Math.random() * 0.5 + 0.75;
                            dayData.data.push({
                                x: hour + ':00',
                                y: Math.round(hourData * variation)
                            });
                        }
                        heatmapData.push(dayData);
